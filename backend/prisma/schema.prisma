  userupd Users[] @relation("UserupdWild")
  source Source @relation(fields: [Source], references: [SID])
  Source Int
}

model WildDetails {
  WDID Int @id @default(autoincrement())
  Name String
  Description String
  type Wilderness @relation(fields: [Type], references: [WID])
